
@{
    bool isMyPage = ViewBag.My ?? false;

    ViewBag.Title = (isMyPage ? "My " : "") + "Projects";
}
@Html.Hidden("IsMyPage", isMyPage)

<div class="container-fluid">
    <div class="row bg-w p-15">
        <h3>
            @ViewBag.Title
            <button type="button" class="btn dv-btn-success btn-sm pull-right" ap-action-project-modal-form disabled data-project-id="0">
                <i class="fa fa-plus m-r-10"></i> Create Project
            </button>
        </h3>
        <hr class="m-y-10" />
        <form class="form-inline">
            <div class="col-lg-6">
                <label for="filter-team-id">Team : </label>
                <select class="form-control teams-ddl" id="filter-team-id" multiple="multiple" style="min-width:400px;">
                    <option value="">Select Team</option>
                </select>
            </div>
            <div class="col-lg-6">
                <label for="filter-status-id">Status</label>
                <select class="form-control projects-status-ddl" id="filter-status-id" multiple="multiple" style="min-width:400px;">
                    <option value="">Select Status</option>
                </select>
            </div>
        </form>
        <div class="clearfix"></div>
        <hr class="m-y-10" />

        <div class="clearfix"></div>
        <table id="projects-table" class="table table-striped table-bordered devs-table" style="width:100%">
            <thead>
                <tr>
                    <th class="text-center">Rank</th>
                    <th>Name</th>
                    <th>Team</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Owner</th>
                    <th>Lead Developer</th>
                    <th>Request Date</th>
                    <th>Request by Date</th>
                    <th>Start Date</th>
                    <th>Production Date</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody></tbody>
            <tfoot>
                @*<tr>
                        <th>Priority Ranking</th>
                        <th>Project Name</th>
                        <th>Project Type</th>
                        <th>Project Status</th>
                        <th>Request Date</th>
                        <th>Request by Date</th>
                        <th>Completed Date</th>
                        <th class="text-center">Action</th>
                    </tr>*@
            </tfoot>
        </table>
        <div class="clearfix"></div>
        <hr class="m-y-5" />
        <div class="user-stories-paging d-flex v-center h-space-between">
            <p id="apdt_projects_info">Showing <span class="apdt_startfrom">0</span> to <span class="apdt_endto">0</span> of <span class="apdt_total">0</span> records</p>
            <div class="" id="projects-paging-container"></div>
        </div>
        <hr class="m-b-0 m-t-10" />
    </div>
</div>

@{
    Html.RenderPartial("Modals/_SaveProjectModalPartial", new PartialModel());
}

@section scripts{
    <script src="~/Scripts/js/CookieUtils.js"></script>
    <script src="~/Scripts/js/ProjectService.js"></script>
    <script src="~/Scripts/js/Projects.js"></script>
}
