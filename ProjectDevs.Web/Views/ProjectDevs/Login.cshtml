
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login - ProjectDevs</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ProjectDevs</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>

    <div class="container m-t-30 d-flex v-center h-center">
        <div class="col-sm-4 col-sm-4 bg-w p-15">
            <h4 class="text-center">Sign-in to ProjectDevs</h4>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Enter user number" id="user-number-txt" value="@ViewBag.userName" />
            </div>
            <button type="button" class="btn btn-xs btn-success" id="sign-in-btn">Sign in</button>
        </div>
    </div>

    <div class="modal animated bounceIn pd-custom-modal" id="CustomAlertModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">X</span></button>
                    <h4 class="modal-title">Alert</h4>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer">
                    <button type="button" class="okbtn btn btn-primary  dv-btn-success" data-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal animated bounceIn pd-custom-modal" id="CustomConfirmModal" tabindex="-1" role="dialog" data-keyboard="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Confirm</h4>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer">
                    <button type="button" class="okbtn btn btn-success  dv-btn-success" data-dismiss="modal">OK</button>
                    <button type="button" class="cancelbtn btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>


    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/js/constants.js"></script>
    <script src="~/Scripts/js/Models.js"></script>
    <script src="~/Scripts/js/Common.js"></script>
    <script src="~/Scripts/js/ApiService.js"></script>
    <script src="~/Scripts/js/UserService.js"></script>
    <script src="~/Scripts/js/Login.js"></script>
</body>
</html>
