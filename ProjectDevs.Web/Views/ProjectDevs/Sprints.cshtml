
@{
    ViewBag.Title = "Sprints";
}

<div class="container-fluid">
    <div class="row bg-w p-15">
        <div class="d-flex v-center h-space-between">
            <h3 class="d-flex v-center">
                <label>Sprints</label>
            </h3>
            <button type="button" class="btn dv-btn-success btn-sm pull-right" ap-action-sprint-modal-form data-sprint-id="">
                <i class="fa fa-plus m-r-10"></i> Create Sprint
            </button>
        </div>
        <hr class="m-y-10" />
        <div class="d-flex v-center h-space-between">
            @*<div class="filter-by-item f-grow-1 m-x-5 col-lg-3">*@
            <div class="col-lg-6">
                <label>Team</label>
                <select class="form-control teams-ddl" id="filter-team-id" multiple="multiple">
                    <option value="">Select Team</option>
                </select>
            </div>
        </div>
        <hr class="m-y-10" />
        <div class="clearfix"></div>
        <table id="sprints-table" class="table table-striped table-bordered devs-table" style="width:100%">
            <thead>
                <tr>
                    <th>Sprint Name</th>
                    <th>Team</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th class="text-center">User Stories Count</th>
                    <th class="text-center">User Stories Completed</th>
                    <th class="text-center">% Completed</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody></tbody>
            <tfoot>
                @*<tr>
                        <th>Sprint Name</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th class="text-center">Action</th>
                    </tr>*@
            </tfoot>
        </table>
        <div class="clearfix"></div>
        <hr class="m-y-5" />
        <div class="user-stories-paging d-flex v-center h-space-between">
            <p id="apdt_sprints_info">Showing <span class="apdt_startfrom">0</span> to <span class="apdt_endto">0</span> of <span class="apdt_total">0</span> records</p>
            <div class="" id="sprints-paging-container"></div>
        </div>
        <hr class="m-b-0 m-t-10" />
    </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="create-edit-sprint-modal" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <form method="post" id="sprints-form">
                <input type="hidden" id="sprint-id" name="SprintId" value="0" />
                <div class="modal-header dv-bg-success">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Create/Edit Sprint</h4>
                </div>
                <div class="modal-body">
                    <div class="d-form-container">
                        <div class="form-group">
                            <label class="d-label">Sprint Name</label>
                            <input type="text" class="form-control d-input" name="SprintName" placeholder="Sprint name" />
                        </div>
                        <div class="form-group">
                            <label class="d-label">Team</label>
                            <select class="form-control d-input teams-ddl" id="team" name="TeamId">
                                <option value="">Select Team</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="d-label">Start Date</label>
                            <input type="date" class="form-control d-input" name="StartDate" placeholder="Start date" />
                        </div>
                        <div class="form-group">
                            <label class="d-label">End Date</label>
                            <input type="date" class="form-control d-input" name="EndDate" placeholder="End date" />
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" id="save-sprint-btn" class="btn dv-btn-success dv-btn-success">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="create-edit-sprint-additional-modal" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <form method="post" id="sprints-form">
                <input type="hidden" id="sprint-id" name="SprintId" value="0" />
                <div class="modal-header dv-bg-success">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Create/Edit Sprint</h4>
                </div>
                <div class="modal-body">
                    <div class="d-form-container">
                        <div class="form-group">
                            <label class="d-label">Sprint Name</label>
                            <input type="text" class="form-control d-input" name="SprintName" placeholder="Sprint name" />
                        </div>
                        <div class="form-group">
                            <label class="d-label">Team</label>
                            <select class="form-control d-input teams-ddl" id="team" name="TeamId">
                                <option value="">Select Team</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="d-label">Start Date</label>
                            <input type="date" class="form-control d-input" name="StartDate" placeholder="Start date" />
                        </div>
                        <div class="form-group">
                            <label class="d-label">End Date</label>
                            <input type="date" class="form-control d-input" name="EndDate" placeholder="End date" />
                        </div>
                        <div class="form-group">
                            <label class="d-label">Change Number</label>
                            <input type="text" class="form-control" name="ChangeNumber" placeholder="Change Number" />
                        </div>
                        <div class="form-group">
                            <label class="d-label">Sprint Retrospective</label>
                            <textarea class="form-control" rows="5" name="SprintRetrospective" placeholder="Sprint Retrospective"></textarea>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" id="save-sprint-btn" class="btn dv-btn-success dv-btn-success">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/js/CookieUtils.js"></script>
    <script src="~/Scripts/js/Sprints.js"></script>
}