
@{
    ViewBag.Title = "Users";
}

<div class="container-fluid">
    <div class="row bg-w p-15">
        <div class="d-flex v-center h-space-between">
            <h3 class="d-flex v-center">
                <label>Users</label>
            </h3>
            <button type="button" class="btn dv-btn-success btn-sm pull-right" ap-action-user-modal-form data-user-id="">
                <i class="fa fa-plus m-r-10"></i> Create User
            </button>
        </div>

        <div class="clearfix"></div>
        <table id="users-table" class="table table-striped table-bordered devs-table" style="width:100%">
            <thead>
                <tr>
                    <th>User Id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th class="text-center">Developer</th>
                    <th class="text-center">Super User</th>
                    <th class="text-center">Active</th>
                    <th id="users-tbl-action-col" class="text-center">Action</th>
                </tr>
            </thead>
            <tbody></tbody>
            <tfoot>
                @*<tr>
                    <th>User Id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th class="text-center">Is Developer</th>
                    <th class="text-center">Is Active</th>
                    <th class="text-center">Action</th>
                </tr>*@
            </tfoot>
        </table>
        <div class="clearfix"></div>
        <hr class="m-y-5" />
        <div class="user-stories-paging d-flex v-center h-space-between">
            <p id="apdt_users_info">Showing <span class="apdt_startfrom">0</span> to <span class="apdt_endto">0</span> of <span class="apdt_total">0</span> records</p>
            <div class="" id="users-paging-container"></div>
        </div>
        <hr class="m-b-0 m-t-10" />
    </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="create-edit-user-modal" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <form method="post" id="users-form">
                <div class="modal-header dv-bg-success">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Create/Edit User</h4>
                </div>
                <div class="modal-body">
                    <div class="d-form-container">
                        <div class="form-group">
                            <label class="d-label">User Id</label>
                            <input type="text" class="form-control d-input" name="UserId" placeholder="User id" />
                        </div>
                        <div class="form-group">
                            <label class="d-label">First Name</label>
                            <input type="text" class="form-control d-input" name="FirstName" placeholder="First name" />
                        </div>
                        <div class="form-group">
                            <label class="d-label">Last Name</label>
                            <input type="text" class="form-control d-input" name="LastName" placeholder="Last name" />
                        </div>
                        <div class="form-group">
                            <label class="d-label">Manager Id</label>
                            <input type="text" class="form-control d-input" name="ManagerId" placeholder="Manager id" />
                        </div>
                        <div class="form-group">
                            <label class="d-checkbox-container m-r-5">
                                <input class="d-checkbox" type="checkbox" name="IsDeveloper" id="is-developer">
                                <span class="d-checkmark"></span>
                            </label>
                            <label for="is-developer">Is Developer</label>
                        </div>
                        <div class="form-group">
                            <label class="d-checkbox-container m-r-5">
                                <input class="d-checkbox" type="checkbox" name="IsActive" id="is-active">
                                <span class="d-checkmark"></span>
                            </label>
                            <label for="is-active">Is Active</label>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="modal-footer">
                    <input  type="hidden" name="IsSuperUser" id="IsSuperUser" value="0">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" id="save-user-btn" class="btn dv-btn-success">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/js/Users.js"></script>
}

