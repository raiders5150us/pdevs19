@model PartialModel

<div class="modal fade" tabindex="-1" role="dialog" id="create-edit-file-modal">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <form method="post" id="files-form">
                <div class="modal-header dv-bg-success">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Upload/Edit File</h4>
                </div>
                <div class="modal-body">
                    <div class="d-form-container">
                        <input type="hidden" id="file-id" name="FileId" value="@Model.FileId" />
                        <input type="hidden" id="file-type-id" name="FileTypeId" value="@Model.FileType" />
                        <input type="hidden" id="associated-record-id" name="AssociatedRecordId" value="@Model.RecordId" />
                        <div class="form-group">
                            <label class="btn btn-success btn-block">
                                <i class="fa fa-upload"></i> Select a file to upload
                                <input name="File" type="file" class="file-element-hide" data-preview="#file-upload-preview" data-file-name-target="#file-upload-name">
                            </label>
                        </div>
                        <div class="form-group">
                            <img class="selected-file-preview hidden" id="file-upload-preview" />
                        </div>
                        <div class="form-group">
                            <label class="d-label">File Name</label>
                            <input type="text" class="form-control d-input" id="file-upload-name" name="FileName" placeholder="File name" />
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" id="save-file-btn" class="btn dv-btn-success">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
